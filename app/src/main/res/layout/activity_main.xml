<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|top"
            android:textColor="@android:color/black"
            android:id="@+id/texto"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="88dp"
                android:layout_height="70dp"
                android:id="@+id/btn7"
                android:text="7"
                />
            <Button
                android:layout_width="88dp"
                android:layout_height="70dp"
                android:id="@+id/btn4"
                android:text="4"/>
            <Button
                android:layout_width="88dp"
                android:layout_height="70dp"
                android:id="@+id/btn1"
                android:text="1"/>
            <Button
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:id="@+id/limp"
                android:text="C"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:orientation="vertical">
            <Button
                android:layout_width="88dp"
                android:layout_height="70dp"
                android:id="@+id/btn8"
                android:text="8"/>
            <Button
                android:layout_width="88dp"
                android:layout_height="70dp"
                android:id="@+id/btn5"
                android:text="5"/>
            <Button
                android:layout_width="88dp"
                android:layout_height="70dp"
                android:id="@+id/btn2"
                android:text="2"/>
            <Button
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:id="@+id/btn0"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:orientation="vertical">
            <Button
                android:layout_width="88dp"
                android:layout_height="70dp"
                android:id="@+id/btn9"
                android:text="9"/>
            <Button
                android:layout_width="88dp"
                android:layout_height="70dp"
                android:id="@+id/btn6"
                android:text="6"/>
            <Button
                android:layout_width="88dp"
                android:layout_height="70dp"
                android:id="@+id/btn3"
                android:text="3"/>
            <Button
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:id="@+id/punto"
                android:text="."/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:orientation="vertical">
            <Button
                android:layout_width="88dp"
                android:layout_height="52dp"
                android:id="@+id/suma"
                android:text="+"/>
            <Button
                android:layout_width="88dp"
                android:layout_height="52dp"
                android:id="@+id/resta"
                android:text="-"/>
            <Button
                android:layout_width="88dp"
                android:layout_height="52dp"
                android:id="@+id/multi"
                android:text="*"/>
            <Button
                android:layout_width="88dp"
                android:layout_height="52dp"
                android:id="@+id/divicion"
                android:text="/"/>
            <Button
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:id="@+id/igual"
                android:text="="/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>